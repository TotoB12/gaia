{
    "manifest_version": 3,
    "name": "Gaia",
    "version": "1.0",
    "description": "A helpful sidebar extension",
    "permissions": [
        "sidePanel",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidebar.html"
    },
    "action": {
        "default_popup": "sidebar.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "data/words_en.txt"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}